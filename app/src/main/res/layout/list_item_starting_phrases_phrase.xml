<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pre_lollipop_list_item_background_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/phrase"
            style="@style/Widget.Subtitles.TextView.Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="@dimen/list_item_phrases_phrase_padding_vertical"
            android:paddingLeft="@dimen/content_inset_material"
            android:paddingRight="@dimen/content_inset_material"
            android:paddingTop="@dimen/list_item_phrases_phrase_padding_vertical"
            android:textSize="@dimen/text_size_phrase"
            tools:text="Я не слышу. Подскажите, как пройти в библиотеку?"/>

        <ImageView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/content_description_more"
            android:padding="@dimen/dimen_8dp"
            android:src="@drawable/ic_action_more"/>

    </LinearLayout>

    <View
        style="@style/Widget.Subtitles.List.Divider"
        android:layout_marginLeft="@dimen/content_inset_material"
        android:layout_marginRight="@dimen/content_inset_material"/>

</LinearLayout>