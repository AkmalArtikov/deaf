<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">


	<include layout="@layout/layout_toolbar"/>

	<View style="@style/Widget.Subtitles.Toolbar.Divider"/>

	<android.support.v7.widget.AppCompatEditText
		android:id="@+id/comment"
		style="@style/Widget.Subtitles.EditText"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:background="@android:color/transparent"
		android:gravity="start|left|top"
		android:hint="@string/feedback_write_something_nice"
		android:imeOptions="actionSend"
		android:inputType="text|textAutoComplete|textAutoCorrect|textCapSentences|textMultiLine"
		android:lineSpacingExtra="4dp"
		android:padding="@dimen/content_inset_material"
		app:backgroundTint="@color/accent_color"/>

	<TextView
		android:id="@+id/device_info"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/content_inset_material"
		android:text="@string/device_model_format"/>

</LinearLayout>