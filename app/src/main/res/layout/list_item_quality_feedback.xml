<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:orientation="vertical"
    android:paddingLeft="@dimen/content_inset_material"
    android:paddingRight="@dimen/content_inset_material">

    <TextView
        android:id="@+id/title"
        style="@style/Widget.Subtitles.TextView.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        tools:text="Хорошо"/>

    <TextView
        android:id="@+id/subtitle"
        style="@style/Widget.Subtitles.TextView.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:textSize="@dimen/text_size_quality_feedback_subtitle"
        tools:text="Совсем без ошибок"/>

    <View
        android:id="@+id/divider"
        style="@style/Widget.Subtitles.List.Divider"/>

</LinearLayout>