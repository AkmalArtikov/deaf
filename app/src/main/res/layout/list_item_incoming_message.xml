<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_message_bottom"
    android:paddingEnd="@dimen/padding_message_incoming_end"
    android:paddingLeft="@dimen/padding_message_incoming_start"
    android:paddingRight="@dimen/padding_message_incoming_end"
    android:paddingStart="@dimen/padding_message_incoming_start"
    android:paddingTop="@dimen/padding_message_top">

    <LinearLayout
        android:id="@+id/bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble_incoming"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text"
            style="@style/Widget.Subtitles.TextView.Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:paddingBottom="@dimen/dimen_8dp"
            android:paddingTop="@dimen/dimen_8dp"
            tools:text="Я не слышу. Подскажите, как пройти в библиотеку?"/>

        <ImageView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/content_description_more"
            android:src="@drawable/ic_action_more"/>

    </LinearLayout>

</LinearLayout>