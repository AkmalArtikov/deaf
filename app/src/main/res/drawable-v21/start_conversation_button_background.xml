<?xml version="1.0" encoding="utf-8"?>
<ripple
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:color="@color/button_primary_ripple_color">

	<item>
		<selector>
			<item android:state_pressed="true">
				<shape android:shape="rectangle">
					<corners android:radius="@dimen/start_conversation_button_radius"/>
					<solid android:color="@color/button_primary_solid_color_pressed"/>
				</shape>
			</item>
			<item>
				<shape android:shape="rectangle">
					<corners android:radius="@dimen/start_conversation_button_radius"/>
					<solid android:color="@color/button_primary_solid_color_normal"/>
				</shape>
			</item>

		</selector>
	</item>

</ripple>
